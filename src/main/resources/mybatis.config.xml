<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
  <properties resource="db.config.yml"/>
  <settings>
    <setting name="cacheEnabled" value="true"/>
    <setting name="lazyLoadingEnabled" value="true"/>
    <setting name="multipleResultSetsEnabled" value="true"/>
    <setting name="useColumnLabel" value="true"/>
    <setting name="useGeneratedKeys" value="false"/>
  </settings>
  <typeAliases>
    <package name="com.penyo.herbms.pojo"/>
  </typeAliases>
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="${driver}"/>
        <property name="url" value="${url}"/>
        <property name="username" value="${username}"/>
        <property name="password" value="${password}"/>
      </dataSource>
    </environment>
  </environments>
  <mappers>
    <mapper resource="com/penyo/herbms/mapper/HerbMapper.xml"/>
    <mapper resource="com/penyo/herbms/mapper/ExperienceMapper.xml"/>
    <mapper resource="com/penyo/herbms/mapper/PrescriptionInfoMapper.xml"/>
    <mapper resource="com/penyo/herbms/mapper/PrescriptionMapper.xml"/>
    <mapper resource="com/penyo/herbms/mapper/ItemDifferentiationInfoMapper.xml"/>
    <mapper resource="com/penyo/herbms/mapper/ItemDifferentiationMapper.xml"/>
  </mappers>
</configuration>